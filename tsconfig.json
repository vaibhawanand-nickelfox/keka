{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": "./source",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "constants/*":["constants/*"],
      "database/*": ["database/*"],
      "model/*": ["model/*"],
      "navigator/*": ["navigator/*"],
      "network/*": ["network/*"],
      "screens/*": ["screens/*"],
      "services/*": ["services/*"],
      "store/*": ["store/*"],
      "tabScreen/*": ["tabScreen/*"],
      "themes/*": ["themes/*"],
      "utils/*": ["utils/*"],
    }
  }
}
